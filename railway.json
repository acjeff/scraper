{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python3 railway_google_sheets_scraper.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "services": [
    {
      "name": "google-sheets-scraper",
      "startCommand": "python3 railway_google_sheets_scraper.py"
    }
  ]
}
